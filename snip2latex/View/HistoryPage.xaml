<Page
    x:Class="snip2latex.View.History"
    xmlns:data ="using:snip2latex.Model"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:snip2latex.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <GridView ItemsSource="{x:Bind HistoryCollection}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="data:recognizedData">
                    <StackPanel Height="150" Width="260" Padding="10,10,10,10"  Orientation="Vertical">
                        <Image Stretch="UniformToFill" Height="100" Width="240" Source="{x:Bind bitmapImage}"/>
                        <TextBlock HorizontalAlignment="Center" Text="{x:Bind date}"/>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
